<h1>Welcome to Connect Four!</h1>

<% if @game_over %>
  <h2><%= @game_over %></h2>
<% elsif @message %>
  <h2><%= @message %>
<% else %>
  <p>
    Make your move using the form below.
  </p>
<% end %>


<pre>
  <table>
    <% @game.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <td><%= cell.nil? ? ' - ' : cell %> </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</pre>

<% if @game_over %>
  <%= link_to "Play again?", new_connectfour_path %>
<% else %>
  <%= form_tag(connectfour_drop_piece_path, :method => "POST") do %>
    <table>
      <% 1.times do |row| %>
        <tr>
          <% 6.times do |cell| %>
            <td>
              <%= radio_button_tag("move","#{cell}") %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <%= submit_tag "Make Move" %>
  <% end %>
<% end %>